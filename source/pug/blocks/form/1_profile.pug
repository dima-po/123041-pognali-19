section.profile
  form.profile__form(action="https://echo.htmlacademy.ru")
    section.profile__section
      h5.visually-hidden Информация пользователя

      div.profile__level-and-image
        section.form-person__level
          h5.visually-hidden Уровень пользователя
          p.profile__level-number 80
          p.profile__level-text level

        picture.profile__image
          img(src="https://via.placeholder.com/200" alt="Изображение пользователя")

        div.profile__image-upload
          input(type="file" name="person-image" id="person-image" value="Сменить фото")
          label(for="person-image") <span>Сменить</span> фото

      section.profile__tags
        h2.profile__tags-title Тэги
        textarea(name="person-tags" placeholder="Введите тэги") #бургер #бар #футбол #концерт #крафт

      section.profile__transport
        h2.profile__transport-title Транспорт
        div.profile__transport-input
          input(type="checkbox" name="transport" id="fly" value="fly")
          label(for="fly") Самолет

        div.profile__transport-input
          input(type="checkbox" name="transport" id="bus" value="bus")
          label(for="bus") Автобус

        div.profile__transport-input
          input(type="checkbox" name="transport" id="bike" value="bike")
          label(for="bike") Велосипед

        div.profile__transport-input
          input(type="checkbox" name="transport" id="walk" value="walk")
          label(for="walk") Пешком
