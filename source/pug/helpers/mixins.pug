mixin destination-card(country, description, people, modificator, imageLinkMobile='https://via.placeholder.com/270', imageLinkTablet='https://via.placeholder.com/270', imageLinkDesktop='https://via.placeholder.com/270')
  if modificator
    article.destanation__card
      picture.destanation__card-image
        source(media="(min-width: 768px)", srcset= imageLinkTablet, type="image/jpg")
        source(media="(min-width: 1440px)", srcset= imageLinkDesktop, type="image/jpg")
        img(src= imageLinkMobile, width='270', height='110', alt='Изображение карточки направления')
      .destanation__card-country(class=`destanation__card-country--${modificator}`)
        h4.destanation__card-country-name= country
        span.destanation__card-country-description= description
        span.destanation__card-country-people= people

  else
    article.destanation__card
      figure.destanation__card-image
        source(media="(min-width: 768px)", srcset= imageLinkTablet, type="image/jpg")
        source(media="(min-width: 1440px)", srcset= imageLinkDesktop, type="image/jpg")
        img(src= imageLinkMobile, width='270', height='110', alt='Изображение карточки направления')
      .destanation__card-country
        h4.destanation__card-country-name= country
        span.destanation__card-country-description= description
        span.destanation__card-country-people= people



mixin companions-card-index(imageLink, level, personName, status, countries, tags, plane=false, bus=false, bike=false, run=false)
  article.companions__card
    h5.visually-hidden Карточка попутчика
    picture.companions__card-image
      img(src= imageLink, width='285', height='285', alt='Изображение карточки направления')

    .companions__card-level
      //- .companions__card-level-circle
      svg.companions__card-level-progress(viewBox='0 0 100 100' class=`companions__card-level-progress--${level}`)
        circle(cx='50', cy='50', r='35.5')
      span.companions__card-level-number= level
      span.companions__card-level-text level

    .companions__card-content

      ul.companions__card-flags
        each country, index in countries
            li.companions__card-flag(class=`companions__card-flag--${index}`)= country
              span.companions__card-flag-tooltip= country

      a.companions__card-person(href="#")
        if status === 'online'
          span.companions__card-person-status.companions__card-person-status--online= Online
        else
          span.companions__card-person-status.companions__card-person-status--offline= Offline

        span.companions__card-person-name= personName

      section.companions__card-tags
        h5.visually-hidden Теги попутчика
        each tag in tags
          a(href="#")= tag

      ul.companions__card-transports
        if plane
          li.companions__card-transport.companions__card-transport--plane.companions__card-transport--available Авиаперелет
            span.companions__card-transport-tooltip Авиаперелет
        else
          li.companions__card-transport.companions__card-transport--plane Авиаперелет
            span.companions__card-transport-tooltip Авиаперелет

        if bus
          li.companions__card-transport.companions__card-transport--bus.companions__card-transport--available Автотранспорт
            span.companions__card-transport-tooltip Автотранспорт
        else
          li.companions__card-transport.companions__card-transport--bus Автотранспорт
            span.companions__card-transport-tooltip Автотранспорт

        if bike
          li.companions__card-transport.companions__card-transport--bike.companions__card-transport--available Велосипед
            span.companions__card-transport-tooltip Велосипед
        else
          li.companions__card-transport.companions__card-transport--bike Велосипед
            span.companions__card-transport-tooltip Велосипед

        if run
          li.companions__card-transport.companions__card-transport--run.companions__card-transport--available Пешком
            span.companions__card-transport-tooltip Пешком
        else
          li.companions__card-transport.companions__card-transport--run Пешком
            span.companions__card-transport-tooltip Пешком



mixin companions-filter-input(type, name, value, text, checked=false)
  .companions-filter__tab-input-group
    if checked
      input.companions-filter__tab-input(type= type, name= name, id= value value= value tabindex="-1" checked)
    else
      input.companions-filter__tab-input(type= type, name= name, id= value value= value tabindex="-1")
    label.companions-filter__tab-label(for= value tabindex="0" aria-label= text)= text



mixin companions-filter-input-transport(type, name, value, text, checked=false)
  .companions-filter__tab-input-group
    if checked
      input.companions-filter__tab-input-transport(type= type, name= name, id= value value= value tabindex="-1" checked)
    else
      input.companions-filter__tab-input-transport(type= type, name= name, id= value value= value tabindex="-1")
    label.companions-filter__tab-label-transport(for= value tabindex="0" aria-label= text)= text



mixin companions-card-page(imageLinkMobile='https://via.placeholder.com/270', imageLinkTablet='https://via.placeholder.com/700', imageLinkDesktop='https://via.placeholder.com/1440', personName, likeCount, tags, countries, level, plane=false, bus=false, bike=false, run=false, liked=false, online=false)

  article.page-companions__card
    .page-companions__card-info
      .page-companions__card-image-wrapper
        picture.page-companions__card-image
          source(media="(min-width: 768px)", srcset= imageLinkTablet, type="image/jpg")
          source(media="(min-width: 1440px)", srcset= imageLinkDesktop, type="image/jpg")
          img(src= imageLinkMobile, width='270', height='270', alt='Изображение карточки попутчика')

      .page-companions__card-person-info
        a.page-companions__card-person-name(class=(online ? "page-companions__card-person-name--online" : "page-companions__card-person-name--offline") href="#")= personName
        .page-companions__card-tags
          each tag in tags
            a(href="#")= tag
        .page-companions__card-buttons
          a.page-companions__card-button-call(href="#") Позвать!
          button.page-companions__card-button-like(type="button" class=(liked ? "page-companions__card-button-like--active" : "")) Нравится
          span.page-companions__card-button-like-count= likeCount


    .page-companions__card-countries
      h6.page-companions__card-category-name Хочет посетить:
      ul.page-companions__card-countries-list
        each country, index in countries
          li.page-companions__card-country(class=`page-companions__card-country--${index}`)= country

    .page-companions__card-transport-level
      .page-companions__card-transports
        h6.page-companions__card-category-name Транспорт:
        ul.page-companions__card-transports-list
          li.page-companions__card-transport.page-companions__card-transport--plane(class=(plane ? "page-companions__card-transport--available" : "")) Авиаперелет
            span.page-companions__card-transport-tooltip Авиаперелет
          li.page-companions__card-transport.page-companions__card-transport--bus(class=(bus ? "page-companions__card-transport--available" : "")) Автобус
            span.page-companions__card-transport-tooltip Автобус
          li.page-companions__card-transport.page-companions__card-transport--bike(class=(bike ? "page-companions__card-transport--available" : "")) Велосипед
            span.page-companions__card-transport-tooltip Велосипед
          li.page-companions__card-transport.page-companions__card-transport--run(class=(run ? "page-companions__card-transport--available" : "")) Пешком
            span.page-companions__card-transport-tooltip Пешком

      .page-companions__card-level
        h6.page-companions__card-category-name Левел:
        .page-companions__card-level-wrapper
          svg.page-companions__card-level-progress(viewBox='0 0 100 100' class=`page-companions__card-level-progress--${level}`)
            circle(cx='50', cy='50', r='35.5')
          span.page-companions__card-level-number= level
          span.page-companions__card-level-text level


mixin companions-country-filter-letter(letter, countries, active=false)
  if active
    li.companions-country-filter__countries-item.companions-country-filter__countries-item--active
      a.companions-country-filter__countries-letter.companions-country-filter__countries-letter--active(href="#")= letter
      ul.companions-country-filter__countries-list
        each country in countries
          li.companions-country-filter__country-name
            a.companions-country-filter__country-link(href="#")= country
  else
    li.companions-country-filter__countries-item
      a.companions-country-filter__countries-letter(href="#")= letter
      ul.companions-country-filter__countries-list
        each country in countries
          li.companions-country-filter__country-name
            a.companions-country-filter__country-link(href="#")= country


