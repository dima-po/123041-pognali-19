mixin destination-card(country, description, people, modificator, imageLinkMobile='https://via.placeholder.com/270', imageLinkTablet='https://via.placeholder.com/270', imageLinkDesktop='https://via.placeholder.com/270')
  if modificator
    article.destanation__card
      picture.destanation__card-image
        source(media="(min-width: 768px)", srcset= imageLinkTablet, type="image/jpg")
        source(media="(min-width: 1440px)", srcset= imageLinkDesktop, type="image/jpg")
        img(src= imageLinkMobile, width='270', height='110', alt='Изображение карточки направления')
      .destanation__card-country(class=`destanation__card-country--${modificator}`)
        h4.destanation__card-country-name= country
        span.destanation__card-country-description= description
        span.destanation__card-country-people= people

  else
    article.destanation__card
      figure.destanation__card-image
        source(media="(min-width: 768px)", srcset= imageLinkTablet, type="image/jpg")
        source(media="(min-width: 1440px)", srcset= imageLinkDesktop, type="image/jpg")
        img(src= imageLinkMobile, width='270', height='110', alt='Изображение карточки направления')
      .destanation__card-country
        h4.destanation__card-country-name= country
        span.destanation__card-country-description= description
        span.destanation__card-country-people= people



mixin companions-card-index(imageLink, level, personName, status, countries, tags, plane=false, bus=false, bike=false, run=false)
  article.companions__card

      picture.companions__card-image
        img(src= imageLink, width='285', height='285', alt='Изображение карточки направления')

      .companions__card-level
        //- .companions__card-level-circle
        svg.companions__card-level-progress(viewBox='0 0 100 100' class=`companions__card-level-progress--${level}`)
          circle(cx='50', cy='50', r='35.5')
        span.companions__card-level-number= level
        span.companions__card-level-text level

      .companions__card-content

        ul.companions__card-flags
          each country, index in countries
              li.companions__card-flag(class=`companions__card-flag--${index}`)= country
                span.companions__card-flag-tooltip= country

        a.companions__card-person(href="#")
          if status === 'online'
            span.companions__card-person-status.companions__card-person-status--online= Online
          else
            span.companions__card-person-status.companions__card-person-status--offline= Offline

          span.companions__card-person-name= personName

        section.companions__card-tags
          h5.visually-hidden Теги попутчика
          each tag in tags
            a(href="#")= tag

        ul.companions__card-transports
          if plane
            li.companions__card-transport.companions__card-transport--plane.companions__card-transport--available Авиаперелет
              span.companions__card-transport-tooltip Авиаперелет
          else
            li.companions__card-transport.companions__card-transport--plane Авиаперелет
              span.companions__card-transport-tooltip Авиаперелет

          if bus
            li.companions__card-transport.companions__card-transport--bus.companions__card-transport--available Автотранспорт
              span.companions__card-transport-tooltip Автотранспорт
          else
            li.companions__card-transport.companions__card-transport--bus Автотранспорт
              span.companions__card-transport-tooltip Автотранспорт

          if bike
            li.companions__card-transport.companions__card-transport--bike.companions__card-transport--available Велосипед
              span.companions__card-transport-tooltip Велосипед
          else
            li.companions__card-transport.companions__card-transport--bike Велосипед
              span.companions__card-transport-tooltip Велосипед

          if run
            li.companions__card-transport.companions__card-transport--run.companions__card-transport--available Пешком
              span.companions__card-transport-tooltip Пешком
          else
            li.companions__card-transport.companions__card-transport--run Пешком
              span.companions__card-transport-tooltip Пешком



mixin companions-filter-input(type, name, value, text)
  .filter-tabs__input-group
    input(type= type, name= name, id= value value= value)
    label(for= value)= text


mixin companions-card-page(imageLink, personName, likeCount, tags, countries, level, fly=false, bus=false, bike=false, walk=false)
  article.page-companions__card

    figure.page-companions__image
      img(src= imageLink, width='285', height='285', alt='Фото пользователя')
      figcaption
        h4.page-companions__name= personName

    button.page-companions__like.page-companions__like--active(type='button') Нравится
    i.page-companions__like-count= likeCount

    section.page-companions__tags
      h5.visually-hidden Теги путешественника
      each tag in tags
        a(href="#")= tag

    section.page-companions__info
      h5.visually-hidden Иннформация путешественника
      dl.page-companions__countries
        dt.page-companions__subtitle Хочет посетить:
        each country, index in countries
          dd.page-companions__country(class=`page-companions__country--${index}`)= country

      dl.companions-card__transports
        dt.page-companions__subtitle Транспорт:
        if fly
          dd.page-companions__transport-fly.page-companions__transport--active Самолет
        else
          dd.page-companions__transport-fly Самолет

        if bus
          dd.page-companions__transport-bus.page-companions__transport--active Автобус
        else
          dd.page-companions__transport-bus Автобус

        if bike
          dd.page-companions__transport-bike.page-companions__transport--active Велосипед
        else
          dd.page-companions__transport-bike Велосипед

        if walk
          dd.page-companions__transport-walk.page-companions__transport--active Пешком
        else
          dd.companions__card-transport-walk Пешком

      .companions-card__level
        p.page-companions__level-number= level
        p.page-companions__level-text level

    button.btn.page-companions__btn(type='button') Позвать!


